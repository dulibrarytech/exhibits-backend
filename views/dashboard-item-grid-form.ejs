<%- include('partials/header.ejs'); %>
<style>

    .color-picker {
        background-color: none;
        outline: none;
        border: 1px solid grey;
        height: 38px;
        width: 50px;
        cursor: pointer;
    }

    input {
        padding: 10px;
        width: 80%;
        font-size: 17px;
        border: 1px solid #aaaaaa;
    }

    .input-group {
        padding: 7px;
    }

    .is-error {
        color: red;
    }

</style>
<body>
<aside id="left-panel" class="left-panel">
    <nav class="navbar navbar-expand-sm navbar-default">
        <div id="main-menu" class="main-menu">
            <ul class="nav navbar-nav">
                <li class="active">
                    <a href="/dashboard/exhibits">
                        <i class="menu-icon fa fa-home"></i>Exhibits Home
                    </a>
                </li>
                <li class="menu-title">Menu</li>
            </ul>
            <ul class="nav navbar-nav"><li id="preview-link"></li></ul>
            <ul id="items-menu" class="nav navbar-nav"></ul>
            <ul class="nav navbar-nav">
                <li>
                    <a href="#" id="logout" data-keyboard="false">
                        <i class="menu-icon fa fa-sign-out"></i>Logout
                    </a>
                </li>
            </ul>
        </div>
    </nav>
</aside>
<div id="right-panel" class="right-panel">
    <header id="header" class="header">
        <div class="top-left">
            <div class="navbar-header">
                <a class="navbar-brand" href="./"><img src="<%= host %>/images/du-logo.png" alt="Logo"></a>
            </div>
        </div>
        <div class="top-right"></div>
    </header>
    <div class="content" style="min-height: 875px;">
        <div id="message"></div>
        <div id="item-grid-card" class="card" style="visibility: visible">
            <div class="card-header">
                <strong class="card-title mb-3">Add item grid to '<span id="exhibit-title"></span>' exhibit</strong>
            </div>
            <form id="item-grid-form" class="form-horizontal">
                <div class="card-body">
                    <input id="exhibit-uuid" type="hidden" name="exhibit_uuid">
                    <div class="alert alert-info"><i class="fa fa-info"></i> Provide info to user about this form</div>
                    <div class="row form-group">
                        <div class="col-12 col-md-12">
                            <input type="number" id="grid-columns" name="grid_columns"
                                   placeholder="# of Columns" class="form-control"
                                   style="width: 150px"><small class="form-text text-muted"></small>
                        </div>
                    </div>
                    <div class="row form-group">
                        <div class="col-12 col-md-12">
                            <p>
                            <label><span class="form-text text-muted"
                                  style="font-size: 17px">Apply Custom Styles to Grid</span></label>
                            </p>
                            <div class="input-group">
                                <div class="input-group-btn">
                                    <input title="Color Picker" class="color-picker btn btn-default" type="color"
                                           id="grid-background-color-picker" value="#ffffff">
                                </div>
                                <input type="text" id="grid-background-color" name="item_grid_background_color"
                                       placeholder="Grid Background Color" class="form-control">

                            </div>
                        </div>
                    </div>
                    <div class="row form-group">
                        <div class="col-12 col-md-12">
                            <div class="input-group">
                                <div class="input-group-btn">
                                    <input title="Color Picker" class="color-picker btn btn-default" type="color"
                                           id="grid-font-color-picker"
                                           value="#ffffff">
                                </div>
                                <input type="text" id="grid-font-color" name="grid_font_color"
                                       placeholder="Grid Font Color" class="form-control">
                            </div>
                        </div>
                    </div>
                    <div class="row form-group">
                        <div class="col-12 col-md-12">
                            <div class="input-group">
                                <select name="grid_font" id="grid-font"
                                        class="form-control-lg form-control text-muted">
                                    <option value="">Grid Font</option>
                                    <option value="Helvetica">Helvetica</option>
                                    <option value="Arial">Arial</option>
                                    <option value="Times New Roman">Times New Roman</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <hr>
                    <button class="btn btn-primary" type="button" id="save-grid-btn">
                        <i class="fa fa-save"></i>&nbsp;&nbsp;Save
                    </button>
                </div>
                <div class="card-footer text-muted"><small>Grid</small></div>
            </form>
        </div>
    </div>
    <div class="clearfix"></div>
    <%- include('partials/footer.ejs'); %>
</div>
<script src="https://code.jquery.com/jquery-3.7.0.js"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.14.4/dist/umd/popper.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/js/bootstrap.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/jquery-match-height@0.7.2/dist/jquery.matchHeight.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/interactjs/dist/interact.min.js"></script>
<script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
<script src="https://unpkg.com/dropzone@5/dist/min/dropzone.min.js"></script>
<script src="<%= host %>/libs/axios-2.x/dist/axios.min.js"></script>
<script src="<%= host %>/libs/dompurify/purify.min.js"></script>
<script src="<%= host %>/app/http.module.js"></script>
<script src="<%= host %>/app/helper.module.js"></script>
<script src="<%= host %>/app/endpoints.module.js"></script>
<script src="<%= host %>/app/auth.module.js"></script>
<script src="<%= host %>/app/uploads.module.js"></script>
<script src="<%= host %>/app/exhibits.module.js"></script>
<script src="<%= host %>/app/items.module.js"></script>
<script src="<%= host %>/app/items.form.module.js"></script>
<script>
    itemsFormModule.init();
    itemsFormModule.grid_init();
</script>
</body>
</html>
