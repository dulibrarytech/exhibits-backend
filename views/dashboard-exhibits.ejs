<%- include('partials/header.ejs'); %>
<body>
<aside id="left-panel" class="left-panel">
    <nav class="navbar navbar-expand-sm navbar-default">
        <div id="main-menu" class="main-menu collapse navbar-collapse">
            <ul class="nav navbar-nav">
                <li class="active">
                    <a href="/exhibits-dashboard/exhibits"><i class="menu-icon fa fa-home"></i>Exhibits Home </a>
                </li>
                <li class="menu-title">Menu</li>
                <li>
                    <a href="/exhibits-dashboard/exhibits/exhibit" data-keyboard="false">
                        <i class="menu-icon ti-layout"></i>Add Exhibit</a>
                </li>
                <li>
                    <a href="/exhibits-dashboard/users" data-keyboard="false">
                        <i class=" menu-icon fa fa-users"></i>Users
                    </a>
                </li>
                <li>
                    <a href="#" id="logout"> <i class="menu-icon fa fa-sign-out"></i>Logout</a>
                </li>
            </ul>
        </div>
    </nav>
</aside>
<div id="right-panel" class="right-panel">
    <%- include('partials/main-header.ejs'); %>
    <div class="content" style="min-height: 875px;">
        <div id="message"></div>
        <div id="exhibit-card" class="card">
            <div class="card-header">
                <strong class="card-title mb-3">Exhibits</strong>
            </div>
            <div class="card-body">
                <table id="exhibits" class="display">
                    <thead>
                    <tr>
                        <th>Title</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody id="exhibits-data"></tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="clearfix"></div>
    <%- include('partials/footer.ejs'); %>
    <div class="modal shared-url-modal" tabindex="-1" role="dialog" aria-labelledby="shared-url-modal" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
            <div class="modal-content" style="background-color: #f2f2f2;">
                <div class="modal-header">
                    <h5 class="modal-title" id="staticBackdropLabel"><i class="fa fa-info"></i> Generates preview URL to share with staff that does not have access to the system</h5>
                </div>
                <div id="copy-message"></div>
                <div id="shared-url" class="modal-body"></div>
                <div id="shared-url-copy" style="visibility: hidden"></div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
</div>
