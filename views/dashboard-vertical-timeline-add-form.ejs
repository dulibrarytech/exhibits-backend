<%- include('partials/header.ejs'); %>
<style>
    .color-picker {
        background-color: none;
        outline: none;
        border: 1px solid grey;
        height: 38px;
        width: 50px;
        cursor: pointer;
    }
</style>
<body>
<aside id="left-panel" class="left-panel">
    <nav class="navbar navbar-expand-sm navbar-default">
        <div id="main-menu" class="main-menu">
            <ul class="nav navbar-nav">
                <li class="active">
                    <a href="/exhibits-dashboard/exhibits">
                        <i class="menu-icon fa fa-home"></i>Exhibits Home
                    </a>
                </li>
                <li class="menu-title">Menu</li>
            </ul>
            <ul class="nav navbar-nav"><li id="preview-link"></li></ul>
            <ul class="nav navbar-nav">
                <li>
                    <a id="back-to-items" href="#" data-keyboard="false">
                        <i class=" menu-icon fa fa-arrow-left"></i>Back to Items</a>
                </li>
            </ul>
            <ul id="items-menu" class="nav navbar-nav"></ul>
            <ul class="nav navbar-nav">
                <li>
                    <a href="#" id="logout" data-keyboard="false">
                        <i class="menu-icon fa fa-sign-out"></i>Logout
                    </a>
                </li>
            </ul>
        </div>
    </nav>
</aside>

<div id="right-panel" class="right-panel">
    <%- include('partials/main-header.ejs'); %>
    <div class="content" style="min-height: 875px;">
        <div id="message"></div>
        <div id="grid-data-card" class="card">
            <div class="card-header">
                <strong class="card-title mb-3">Add Vertical Timeline to '<span id="exhibit-title"></span>' exhibit</strong>
            </div>
            <div class="card-body">
                <div class="alert alert-info"><i class="fa fa-info"></i> Provide info to user about this form</div>
                <div class="row">
                    <div class="col-12 col-md-12">
                        <div class="row form-group">
                            <div class="col-12">
                                <div class="form-text text-muted" style="font-size: 17px"><span style="color: darkred">*</span>
                                    Title <small><em>(Required)</em></small>
                                </div>
                                <span id="timeline-title-error" class="is-error"></span>
                                <textarea id="timeline-title-input" class="form-control" name="timeline_title_input"
                                          rows="4"></textarea>
                                <!--<div id="timeline-title-input" style="height: 100px"></div>-->
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12 col-md-12">
                        <div class="row form-group">
                            <div class="col-12">
                                <div class="form-text text-muted" style="font-size: 17px">Text
                                    <small><em>(Optional)</em></small></div>
                                <textarea id="timeline-text-input" class="form-control" name="timeline_text_input"
                                          rows="4"></textarea>
                                <!--<div id="timeline-text-input" style="height: 100px"></div>-->
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div id="grid-styles-card" class="card">
            <div class="card-header">
                <strong class="card-title mb-3">Vertical Timeline Styles</strong>
            </div>
            <div class="card-body">
                <div class="alert alert-info">
                    <i class="fa fa-info"></i> <span id="info-message">Provide info to user about grid styles</span>
                </div>
                <div class="row">
                    <div class="col-6 col-md-6">
                        <div class="row form-group">
                            <div class="col-12 col-md-12">
                                <p>
                                <div class="form-text text-muted" style="font-size: 17px">
                                    <label for="timeline-background-color">Timeline Background Color</label>
                                </div>
                                </p>
                                <div class="input-group">
                                    <div class="input-group-btn">
                                        <input title="Color Picker" class="color-picker btn btn-default" type="color"
                                               id="timeline-background-color-picker" value="#ffffff">
                                    </div>
                                    <input type="text" id="timeline-background-color" name="timeline_background_color"
                                           placeholder="i.e. #FFFFFF" class="form-control" style="height: 40px">

                                </div>
                            </div>
                        </div>
                        <div class="row form-group">
                            <div class="col-12 col-md-12">
                                <p>
                                <div class="form-text text-muted" style="font-size: 17px">
                                    <label for="timeline-font-size">Timeline Font Size</label>
                                </div>
                                </p>
                                <div class="input-group">
                                    <input type="number" id="timeline-font-size" name="timeline_font_size"
                                           placeholder="" class="form-control" min="1" max="50" style="height: 40px">
                                    <div class="input-group-append">
                                        <span class="input-group-text" id="basic-addon2">px</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-6 col-md-6">
                        <div class="row form-group">
                            <div class="col-12 col-md-12">
                                <p>
                                <div class="form-text text-muted" style="font-size: 17px">
                                    <label for="timeline-font-color">Timeline Font Color</label>
                                </div>
                                </p>
                                <div class="input-group">
                                    <div class="input-group-btn">
                                        <input title="Color Picker" class="color-picker btn btn-default" type="color"
                                               id="timeline-font-color-picker"
                                               value="#ffffff">
                                    </div>
                                    <input type="text" id="timeline-font-color" name="timeline_font_color"
                                           placeholder="i.e. #FFFFFF" class="form-control" style="height: 40px">
                                </div>
                            </div>
                        </div>
                        <div class="row form-group">
                            <div class="col-12 col-md-12">
                                <p>
                                <div class="form-text text-muted" style="font-size: 17px">
                                    <label for="timeline-font">Timeline Font</label>
                                </div>
                                </p>
                                <div class="input-group">
                                    <select name="timeline_font" id="timeline-font"
                                            class="form-control-lg form-control text-muted" style="height: 40px">
                                        <option value="">----------</option>
                                        <%- include('partials/exhibit-fonts-options-list.ejs'); %>
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div id="item-submit-card" class="card">
            <div class="card-body">
                <button class="btn btn-primary" type="button" id="save-timeline-btn">
                    <i class="fa fa-save"></i>&nbsp;&nbsp;Save
                </button>
            </div>
            <div class="card-footer text-muted"><small>Vertical Timeline</small></div>
        </div>
    </div>
    <div class="clearfix"></div>
    <%- include('partials/footer.ejs'); %>
</div>
<script src="https://code.jquery.com/jquery-3.7.0.js"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.14.4/dist/umd/popper.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/js/bootstrap.min.js"></script>
