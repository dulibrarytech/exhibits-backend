<style>
    .color-picker {
        background-color: none;
        outline: none;
        border: 1px solid grey;
        height: 38px;
        width: 50px;
        cursor: pointer;
    }
</style>
<body>
<aside id="left-panel" class="left-panel">
    <nav class="navbar navbar-expand-sm navbar-default">
        <div id="main-menu" class="main-menu">
            <ul class="nav navbar-nav">
                <li class="active">
                    <a href="/exhibits-dashboard/exhibits">
                        <i class="menu-icon fa fa-home"></i>Exhibits Home
                    </a>
                </li>
                <li class="menu-title">Menu</li>
            </ul>
            <ul class="nav navbar-nav"><li id="preview-link"></li></ul>
            <ul class="nav navbar-nav">
                <li>
                    <a id="back-to-items" href="#" data-keyboard="false">
                        <i class=" menu-icon fa fa-arrow-left"></i>Back to Items</a>
                </li>
            </ul>
            <ul id="items-menu" class="nav navbar-nav"></ul>
            <ul class="nav navbar-nav">
                <li>
                    <a href="#" id="logout" data-keyboard="false">
                        <i class="menu-icon fa fa-sign-out"></i>Logout
                    </a>
                </li>
            </ul>
        </div>
    </nav>
</aside>
<div id="right-panel" class="right-panel">
    <header id="header" class="header">
        <div class="top-left">
            <div class="navbar-header">
                <a class="navbar-brand" href="./"><img src="/exhibits-dashboard/static/images/du-logo.png" alt="Logo"></a>
            </div>
        </div>
        <div class="top-right"></div>
    </header>
    <div class="content" style="min-height: 875px;">
        <div id="message"></div>
        <div id="item-heading-card" class="card" style="visibility: hidden">
            <div class="card-header">
                <strong class="card-title mb-3">Edit '<span id="exhibit-title"></span>' exhibit heading</strong>
            </div>
            <form id="item-heading-form" class="form-horizontal">
                <div class="card-body">
                    <input id="exhibit-uuid" type="hidden" name="exhibit_uuid">
                    <div class="alert alert-info"><i class="fa fa-info"></i> Provide info to user about this form</div>
                    <div class="row form-group">
                        <div class="col-12 col-md-12">
                            <input type="text" id="item-heading-text" name="text" placeholder="Heading Text"
                                   class="form-control">
                            <small class="form-text text-muted"><span style="color: red">*</span> Required</small>
                        </div>
                    </div>

                    <hr>

                    <p>
                            <span class="form-text text-muted"
                                  style="font-size: 17px">Apply Custom Styles to Heading</span>
                    </p>
                    <div class="row form-group">
                        <div class="col-6 col-md-6">
                            <div class="input-group">
                                <div class="input-group-btn">
                                    <input title="Color Picker" class="color-picker btn btn-default" type="color"
                                           id="heading-background-color-picker" value="#ffffff">
                                </div>
                                <input type="text" id="heading-background-color" name="heading_background_color"
                                       placeholder="Heading Background Color" class="form-control" style="height: 40px">

                            </div>
                        </div>
                        <div class="col-6 col-md-6">
                            <div class="input-group">
                                <div class="input-group-btn">
                                    <input title="Color Picker" class="color-picker btn btn-default" type="color"
                                           id="heading-font-color-picker"
                                           value="#ffffff">
                                </div>
                                <input type="text" id="heading-font-color" name="item_font_color"
                                       placeholder="Heading Font Color" class="form-control" style="height: 40px">
                            </div>
                        </div>
                    </div>
                    <div class="row form-group">
                        <div class="col-6 col-md-6">
                            <div class="input-group">
                                <input type="number" id="heading-font-size" name="template_font_size"
                                       placeholder="Heading Font Size" class="form-control" min="1" max="50" style="height: 40px">
                                <div class="input-group-append">
                                    <span class="input-group-text" id="basic-addon2">px</span>
                                </div>
                            </div>
                        </div>
                        <div class="col-6 col-md-6">
                            <div class="input-group">
                                <select name="heading_font" id="heading-font"
                                        class="form-control-lg form-control text-muted" style="height: 40px">
                                    <option value="">Heading Font</option>
                                    <option value="Helvetica">Helvetica</option>
                                    <option value="Arial">Arial</option>
                                    <option value="Times New Roman">Times New Roman</option>
                                    <option value="Nocturne Serif">Nocturne Serif</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <hr>
                    <button class="btn btn-primary" type="button" id="save-heading-btn">
                        <i class="fa fa-save"></i>&nbsp;&nbsp;Save
                    </button>
                </div>
                <div class="card-footer text-muted"><small>Heading</small></div>
            </form>
        </div>
    </div>
    <div class="clearfix"></div>
    <%- include('partials/footer.ejs'); %>
</div>
<script src="https://code.jquery.com/jquery-3.7.0.js"></script>
