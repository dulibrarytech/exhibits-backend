<div id="grid-data-card" class="card">
    <div class="card-header">
        <strong class="card-title mb-3">'<span id="exhibit-title"></span>' exhibit</strong>
    </div>
    <div class="card-body">
        <div class="alert alert-info"><i class="fa fa-info"></i> Provide info to user about this form</div>
        <div class="row">
            <div class="col-8 col-md-8">
                <div class="row form-group">
                    <div class="col-12">
                        <div class="form-text text-muted" style="font-size: 17px"><span style="color: darkred">*</span>
                            Title <small><em>(Required)</em></small>
                            &nbsp;&nbsp;<a onclick="helperModule.preview_html('grid-title-input');return false;" data-toggle="modal" data-target=".preview-html" class="btn-xs btn-light"><span style="padding: 5px"><i class="fa fa-code"></i> <small>Preview Field</small></span></a>
                        </div>
                        <span id="grid-title-error" class="is-error"></span>
                        <textarea id="grid-title-input" class="form-control" name="grid_title_input"
                                  rows="4"></textarea>
                    </div>
                </div>
            </div>
            <div class="col-4 col-md-4">
                <div class="row form-group">
                    <div class="col-12">
                        <div class="form-text text-muted" style="font-size: 17px"><span style="color: darkred">*</span>
                            Grid Columns <small><em>(Required)</em></small>
                        </div>
                        <input type="number" id="grid-columns" name="grid_columns"
                               class="form-control" min="1"
                               style="width: 150px" value="4"><small class="form-text text-muted"></small>

                        <span id="grid-title-error" class="is-error"></span>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12 col-md-12">
                <div class="row form-group">
                    <div class="col-12">
                        <div class="form-text text-muted" style="font-size: 17px">Text
                            <small><em>(Optional)</em></small>
                            &nbsp;&nbsp;<a onclick="helperModule.preview_html('grid-text-input');return false;" data-toggle="modal" data-target=".preview-html" class="btn-xs btn-light"><span style="padding: 5px"><i class="fa fa-code"></i> <small>Preview Field</small></span></a>
                        </div>
                        <textarea id="grid-text-input" class="form-control" name="grid_text_input"
                                  rows="4"></textarea>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>