<style>
    .dropdown-container {
        position: relative;
        margin-bottom: 20px;
    }

    .dropdown-header {
        padding: 12px 16px;
        border: 1px solid #e0e0e0;
        border-radius: 8px;
        cursor: pointer;
        background: white;
        display: flex;
        justify-content: space-between;
        align-items: center;
        transition: all 0.3s ease;
    }

    .dropdown-header:hover {
        border-color: #e0e0e0;
    }

    .dropdown-header.active {
        border-color: #e0e0e0;
        border-bottom-left-radius: 0;
        border-bottom-right-radius: 0;
    }

    .dropdown-arrow {
        transition: transform 0.3s ease;
    }

    .dropdown-arrow.rotate {
        transform: rotate(180deg);
    }

    .search-box {
        padding: 10px 16px;
        border: 1px solid #e0e0e0;
        border-top: none;
        display: none;
    }

    .search-box.show {
        display: block;
    }

    .search-box input {
        width: 100%;
        border: none;
        outline: none;
        padding: 8px;
        font-size: 14px;
    }

    .dropdown-list {
        position: absolute;
        top: 100%;
        left: 0;
        right: 0;
        background: white;
        border: 1px solid #e0e0e0;
        border-top: none;
        border-radius: 0 0 8px 8px;
        max-height: 0;
        overflow: hidden;
        transition: max-height 0.3s ease;
        z-index: 10;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .dropdown-list.show {
        max-height: 250px;
        overflow-y: auto;
    }

    .virtual-list {
        height: 100%;
    }

    .dropdown-item {
        /*padding: 12px 16px;*/
        cursor: pointer;
        display: flex;
        align-items: center;
        transition: background 0.2s ease;
        min-height: 48px;
    }

    .dropdown-item:hover {
        background: #f5f5f5;
    }

    .dropdown-item input[type="checkbox"] {
        margin-left: 1px;
        margin-right: 10px;
        cursor: pointer;
        width: 18px;
        height: 18px;
    }

    .selected-items {
        color: #666;
        font-size: 14px;
    }

    .placeholder {
        color: #999;
    }

    .selected-count {
        background: #5A5A5A;
        color: white;
        padding: 2px 8px;
        border-radius: 12px;
        font-size: 12px;
        margin-left: 8px;
    }

    .result {
        padding: 16px;
        background: #f8f9fa;
        border-radius: 8px;
        margin-top: 20px;
        max-height: 200px;
        overflow-y: auto;
    }

    .result h3 {
        font-size: 16px;
        margin-bottom: 8px;
        color: #333;
    }

    .result ul {
        list-style: none;
        padding-left: 0;
    }

    .result li {
        padding: 4px 0;
        color: #666;
        font-size: 14px;
    }
</style>
<div id="subjects-data-card" class="card">
    <div class="card-header">
        <strong class="card-title mb-3">Item Subjects</strong>
        <div class="btn-group float-right">
            <span id="created" style="text-align: right; font-size: x-small"></span>
        </div>
    </div>
    <div class="card-body">
        <div class="dropdown-container">
            <div class="dropdown-header" id="dropdownHeader">
                        <span class="selected-items" id="selectedText">
                            <span class="placeholder">Select subjects...</span>
                        </span>
                <span class="dropdown-arrow" id="arrow">â–¼</span>
            </div>
            <div class="search-box" id="searchBox">
                <input type="text" id="searchInput" placeholder="Search subjects...">
            </div>
            <div class="dropdown-list" id="dropdownList">
                <div class="virtual-list" id="virtualList"></div>
            </div>
        </div>
        <div class="result">
            <h3>Subjects Selected:</h3>
            <ul id="resultList">
                <li style="color: #999;">None selected</li>
            </ul>
            <input id="selected-subjects" name="selected_subjects[]" type="hidden">
        </div>
    </div>
</div>
<script src="/exhibits-dashboard/static/app/utils/helper.subjects.menu.class.js"></script>