<!-- Uploaded Media Modal -->
<!-- This modal opens after successful file uploads and cannot be closed by the user -->
<!-- Each uploaded file gets its own form with individual save button -->
<div class="modal fade" 
     id="uploaded-media-modal" 
     data-bs-backdrop="static" 
     data-bs-keyboard="false"
     data-backdrop="static"
     data-keyboard="false"
     tabindex="-1" 
     aria-labelledby="uploaded-media-modal-title" 
     aria-hidden="true"
     role="dialog">
    <div class="modal-dialog modal-xl modal-dialog-centered modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header"><!-- text-white bg-primary -->
                <strong class="modal-title" id="uploaded-media-modal-title">
                    <i class="fa fa-check-circle" style="margin-right: 8px;" aria-hidden="true"></i>
                    Media Uploaded Successfully
                </strong>
                <!-- No close button - modal cannot be dismissed -->
            </div>
            <div class="modal-body">
                <!-- Upload Summary -->
                <div class="alert alert-success mb-4" role="alert">
                    <div class="d-flex align-items-center">
                        <i class="fa fa-info-circle fa-lg" style="margin-right: 12px;" aria-hidden="true"></i>
                        <div>
                            <strong>Upload Complete!</strong>
                            <p class="mb-0" id="upload-summary-text">Your files have been uploaded to the media library.</p>
                        </div>
                    </div>
                </div>

                <!-- Instructions -->
                <div class="mb-4">
                    <p class="text-muted">
                        <i class="fa fa-pencil" style="margin-right: 6px;" aria-hidden="true"></i>
                        Please provide details for each uploaded file below. 
                        Fields marked with <span class="text-danger">*</span> are required.
                        Click <strong>Save</strong> on each file when done.
                    </p>
                </div>

                <!-- Uploaded Files Forms Container -->
                <div id="uploaded-files-forms-container" class="uploaded-files-forms">
                    <!-- Individual file forms will be dynamically inserted here by JavaScript -->
                </div>

                <!-- Hidden field for tracking all files -->
                <input type="hidden" id="modal-all-files" name="all_files">
            </div>
            <div class="modal-footer justify-content-between">
                <div class="text-muted">
                    <small>
                        <i class="fa fa-info-circle" style="margin-right: 6px;" aria-hidden="true"></i>
                        <span id="modal-validation-message">0 of 0 files saved</span>
                    </small>
                </div>
                <div>
                    <button type="button" 
                            class="btn btn-success" 
                            id="uploaded-media-done-btn"
                            style="display: none;">
                        <i class="fa fa-check" style="margin-right: 6px;" aria-hidden="true"></i>
                        Done
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

