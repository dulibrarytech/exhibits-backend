<style>
    /* Prevent font options from displaying in their actual font face */
    select option {
        font-family: inherit;
    }

    /* Ensure optgroup labels are visually distinct */
    select optgroup {
        font-weight: bold;
        font-style: normal;
        color: #000;
    }

    /* Ensure options have adequate contrast */
    select option {
        color: #000;
        background-color: #fff;
    }

    /* Focus and selected states */
    select option:focus,
    select option:checked {
        background-color: #007bff;
        color: #fff;
    }
</style>
<optgroup label="System Fonts - Sans Serif">
    <option value="Arial">Arial</option>
    <option value="Tahoma">Tahoma</option>
    <option value="Trebuchet MS">Trebuchet MS</option>
    <option value="Verdana">Verdana</option>
</optgroup>
<optgroup label="System Fonts - Serif">
