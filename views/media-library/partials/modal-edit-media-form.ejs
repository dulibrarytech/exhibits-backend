<!-- Edit Media Modal -->
<div class="modal fade" 
     id="edit-media-modal" 
     tabindex="-1" 
     role="dialog" 
     aria-labelledby="edit-media-modal-title" 
     aria-hidden="true"
     data-backdrop="static"
     data-keyboard="false">
    <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header d-flex justify-content-between align-items-center">
                <h5 class="modal-title mb-0" id="edit-media-modal-title">
                    <i class="fa fa-pencil" style="margin-right: 8px;" aria-hidden="true"></i>
                    Edit Media Record
                </h5>
                <button type="button" 
                        class="close ml-auto" 
                        data-dismiss="modal" 
                        aria-label="Close"
                        id="edit-media-close-btn"
                        style="margin: 0; padding: 0; font-size: 1.5rem; line-height: 1;">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <!-- Message container -->
                <div id="edit-media-message" role="status" aria-live="polite"></div>
                
                <!-- Loading indicator -->
                <div id="edit-media-loading" class="text-center py-5" style="display: none;">
                    <i class="fa fa-spinner fa-spin fa-3x" aria-hidden="true"></i>
                    <p class="mt-3 text-muted">Loading media record...</p>
                </div>
                
                <!-- Form container -->
                <div id="edit-media-form-container"></div>
            </div>
            <div class="modal-footer">
                <button type="button" 
                        class="btn btn-secondary" 
                        id="edit-media-cancel-btn"
                        data-dismiss="modal">
                    <i class="fa fa-times" style="margin-right: 6px;" aria-hidden="true"></i>
                    Cancel
                </button>
                <button type="button" 
                        class="btn btn-primary" 
                        id="edit-media-save-btn">
                    <i class="fa fa-save" style="margin-right: 6px;" aria-hidden="true"></i>
                    Save Changes
                </button>
            </div>
        </div>
    </div>
</div>
