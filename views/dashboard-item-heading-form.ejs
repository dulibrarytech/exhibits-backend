<%- include('partials/header.ejs'); %>
<body>
<aside id="left-panel" class="left-panel">
    <nav class="navbar navbar-expand-sm navbar-default">
        <div id="main-menu" class="main-menu">
            <ul class="nav navbar-nav">
                <li class="active">
                    <a href="/dashboard/exhibits">
                        <i class="menu-icon fa fa-home"></i>Exhibits Home
                    </a>
                </li>
                <li class="menu-title">Menu</li>
            </ul>
            <ul id="preview-link" class="nav navbar-nav"></ul>
            <ul id="items-menu" class="nav navbar-nav"></ul>
            <ul class="nav navbar-nav">
                <li>
                    <a href="#" id="logout" data-keyboard="false">
                        <i class="menu-icon fa fa-sign-out"></i>Logout
                    </a>
                </li>
            </ul>
        </div>
    </nav>
</aside>
<div id="right-panel" class="right-panel">
    <header id="header" class="header">
        <div class="top-left">
            <div class="navbar-header">
                <a class="navbar-brand" href="./"><img src="<%= host %>/images/du-logo.png" alt="Logo"></a>
            </div>
        </div>
        <div class="top-right"></div>
    </header>
    <div class="content" style="min-height: 875px;">
        <div id="message"></div>
        <div id="item-heading-card" class="card" style="visibility: hidden">
            <div class="card-header">
                <strong class="card-title mb-3">Add heading to '<span id="exhibit-title"></span>' exhibit</strong>
            </div>
            <form id="item-heading-form" class="form-horizontal">
                <div class="card-body">
                    <input id="exhibit-uuid" type="hidden" name="exhibit_uuid">
                    <div class="alert alert-info"><i class="fa fa-info"></i> Provide info to user about this form</div>
                    <div class="row form-group">
                        <div class="col-12 col-md-12">
                            <input type="text" id="item-heading-text" name="text" placeholder="Heading Text"
                                   class="form-control">
                            <small class="form-text text-muted">* Required</small>
                        </div>
                    </div>
                    <hr>
                    <button class="btn btn-primary" type="button" id="save-heading-btn">
                        <i class="fa fa-save"></i>&nbsp;&nbsp;Save
                    </button>
                </div>
                <div class="card-footer text-muted"><small>Heading</small></div>
            </form>
        </div>
    </div>
    <div class="clearfix"></div>
    <%- include('partials/footer.ejs'); %>
</div>
<script src="https://code.jquery.com/jquery-3.7.0.js"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.14.4/dist/umd/popper.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/js/bootstrap.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/jquery-match-height@0.7.2/dist/jquery.matchHeight.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/interactjs/dist/interact.min.js"></script>
<script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
<script src="https://unpkg.com/dropzone@5/dist/min/dropzone.min.js"></script>
<script src="<%= host %>/libs/axios-2.x/dist/axios.min.js"></script>
<script src="<%= host %>/libs/dompurify/purify.min.js"></script>
<script src="<%= host %>/app/http.module.js"></script>
<script src="<%= host %>/app/helper.module.js"></script>
<script src="<%= host %>/app/endpoints.module.js"></script>
<script src="<%= host %>/app/auth.module.js"></script>
<script src="<%= host %>/app/uploads.module.js"></script>
<script src="<%= host %>/app/exhibits.module.js"></script>
<script src="<%= host %>/app/items.module.js"></script>
<script src="<%= host %>/app/items.form.module.js"></script>
<script>
    document.querySelector('#save-heading-btn').addEventListener('click', itemsFormModule.create_heading_record);
    itemsFormModule.init();
    itemsFormModule.set_headings_form_nav_menu_links();
</script>
</body>
</html>
