<%- include('partials/header.ejs'); %>
<style>
    .color-picker {
        background-color: none;
        outline: none;
        border: 1px solid grey;
        height: 38px;
        width: 50px;
        cursor: pointer;
    }
</style>
<body>
<aside id="left-panel" class="left-panel">
    <nav class="navbar navbar-expand-sm navbar-default">
        <div id="main-menu" class="main-menu">
            <ul class="nav navbar-nav">
                <li class="active">
                    <a href="/exhibits-dashboard/exhibits">
                        <i class="menu-icon fa fa-home"></i>Exhibits Home
                    </a>
                </li>
                <li class="menu-title">Menu</li>
            </ul>
            <ul class="nav navbar-nav"><li id="preview-link"></li></ul>
            <ul class="nav navbar-nav">
                <li>
                    <a id="back-to-items" href="#" data-keyboard="false">
                        <i class=" menu-icon fa fa-arrow-left"></i>Back to Items</a>
                </li>
            </ul>
            <ul id="items-menu" class="nav navbar-nav"></ul>
            <ul class="nav navbar-nav">
                <li>
                    <a href="#" id="logout" data-keyboard="false">
                        <i class="menu-icon fa fa-sign-out"></i>Logout
                    </a>
                </li>
            </ul>
        </div>
    </nav>
</aside>

<div id="right-panel" class="right-panel">
    <header id="header" class="header">
        <div class="top-left">
            <div class="navbar-header">
                <a class="navbar-brand" href="./"><img src="/exhibits-dashboard/static/images/du-logo.png" alt="Logo"></a>
            </div>
        </div>
        <div class="top-right"></div>
    </header>
    <div class="content" style="min-height: 875px;">
        <div id="message"></div>
        <div id="exhibit-data-card" class="card" style="visibility: visible">
            <div class="card-header">
                <strong class="card-title mb-3">Add standard Item to '<span id="exhibit-title"></span>' exhibit</strong>
            </div>
            <div class="card-body">
                <div class="alert alert-info"><i class="fa fa-info"></i> Provide info to user about this form</div>
                <div class="row">
                    <div class="col-12 col-md-12">
                        <div class="row form-group">
                            <div class="col-12">
                                <div class="form-text text-muted" style="font-size: 17px"><span style="color: red">*</span>
                                    Title <small><em>(Required)</em></small>
                                </div>
                                <small class="form-text text-muted"><i class="fa fa-exclamation-circle"></i> <em>The item title becomes a subheading in the navigation</em></small>
                                <span id="item-title-error" class="is-error"></span>
                                <div id="item-title-input" style="height: 100px"></div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-6 col-md-6">
                        <div class="row form-group">
                            <div class="col-12">
                                <div class="form-text text-muted" style="font-size: 17px">Caption <small><em>(Optional)</em></small></div>
                                <div id="item-caption-input" style="height: 100px"></div>
                            </div>
                        </div>
                    </div>
                    <div class="col-6 col-md-6">
                        <div class="row form-group">
                            <div class="col-12">
                                <div class="form-text text-muted" style="font-size: 17px">Text <small><em>(Optional)</em></small></div>
                                <div id="item-text-input" style="height: 100px"></div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12 col-md-12">
                        <div class="row form-group">
                            <div class="col-12">
                                <div class="form-text text-muted" style="font-size: 17px">Description <small><em>(Optional)</em></small></div>
                                <div id="item-description-input" style="height: 100px"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div id="item-media-card" class="card">
            <div class="card-header">
                <strong class="card-title mb-3">Item Media</strong>
            </div>
            <div class="card-body">

                <div class="alert alert-info">
                    <i class="fa fa-info"></i> <span id="info-message">Provide info to user about uploading exhibit media</span>
                </div>

                <div class="default-tab">
                    <nav>
                        <div class="nav nav-tabs" id="nav-tab" role="tablist">
                            <a class="nav-item nav-link active" id="nav-home-tab" data-toggle="tab"
                               href="#nav-home" role="tab" aria-controls="nav-home" aria-selected="true">Upload
                                Media</a>
                            <a class="nav-item nav-link" id="nav-profile-tab" data-toggle="tab"
                               href="#nav-profile" role="tab" aria-controls="nav-profile" aria-selected="false">Import
                                Media from Repository</a>
                        </div>
                    </nav>
                    <div class="tab-content pl-3 pt-2" id="nav-tabContent">
                        <div class="tab-pane fade show active" id="nav-home" role="tabpanel"
                             aria-labelledby="nav-home-tab">

                            <div class="row">
                                <span class="upload-error"></span>
                                <div class="col-6 col-md-6">
                                    <div class="col-12">
                                        <p>
                                            <br>
                                            <span id="item-media-filename-display"></span>&nbsp;&nbsp;
                                            <span>
                                        <a id="item-media-trash" title="Trash" href="#"><i class="fa fa-trash"></i></a>
                                    </span>
                                        </p>

                                        <input type="hidden" id="item-media" name="item_media">
                                        <input type="hidden" id="item-type" name="item_type">

                                        <form class="form-horizontal dropzone" id="item-dropzone" action="/uploads"
                                              method="post"
                                              enctype="multipart/form-data">
                                        </form>

                                    </div>
                                </div>
                                <div class="col-6 col-md-6">
                                    <div class="col-12">
                                        <p>
                                            <br>
                                            <span id="item-thumbnail-filename-display"></span>&nbsp;&nbsp;
                                            <span>
                                        <a id="item-thumbnail-trash" title="Trash" href="#"><i class="fa fa-trash"></i></a>
                                    </span>
                                        </p>
                                        <input type="hidden" id="item-thumbnail" name="item_thumbnail">

                                        <form class="form-horizontal dropzone" id="item-thumbnail-dropzone" action="/uploads"
                                              method="post"
                                              enctype="multipart/form-data">
                                        </form>
                                    </div>
                                </div>
                            </div>
                            <div id="toggle-open-to-page" style="visibility: hidden">
                                <p>
                                <div class="col-sm-3 my-1">
                                    <label class="sr-only" for="pdf-open-to-page">Open PDF to page</label>
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <div class="input-group-text">Open PDF to page</div>
                                        </div>
                                        <input type="number" class="form-control" id="pdf-open-to-page" min="1" value="1">
                                    </div>
                                </div>
                                <small class="form-text text-muted"><i class="fa fa-exclamation-circle"></i> <em>The viewer will automatically open to the page entered</em></small>
                                </p>
                            </div>
                        </div>
                        <div class="tab-pane fade" id="nav-profile" role="tabpanel"
                             aria-labelledby="nav-profile-tab">
                            <!--
                            <div class="alert alert-info">
                                <i class="fa fa-info"></i> <span id="info-message">Provide info to user about importing from repo</span>
                            </div>
                            -->
                            <div class="col-12 col-md-12">
                                <div class="row form-group">
                                    <input type="text" id="repo-uuid" name="repo_uuid"
                                           placeholder="DigitalDU record UUID" class="form-control">
                                </div>
                            </div>
                            <br>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div id="item-layout-card" class="card" style="visibility: visible">
            <div class="card-header">
                <strong class="card-title mb-3">Item Layout</strong>
            </div>
            <div class="card-body">
                <div class="alert alert-info">
                    <i class="fa fa-info"></i> <span id="info-message">Provide info to user about item layouts</span>
                </div>
                <div class="row">
                    <div class="col-4 col-md-4">
                        <p><img src="/exhibits-dashboard/static/images/item_layout_media_top_text_bottom.png" width="145" height="135"></p>
                        <p>
                            <label class="btn btn-default" for="item-layout-top" style="font-size: 15px">Text media pair,
                                text below media
                                <input class="item-layout-radio-btn" type="radio" name="layout"
                                       id="item-layout-top" value="media_top"/>
                            </label>
                        </p>
                    </div>
                    <div class="col-4 col-md-4">
                        <p><img src="/exhibits-dashboard/static/images/item_layout_text_top_media_bottom.png" width="135" height="135"></p>
                        <p>
                            <label class="btn btn-default" for="item-layout-bottom" style="font-size: 15px">Text media
                                pair, text above the media
                                <input class="item-layout-radio-btn" type="radio" name="layout"
                                       id="item-layout-bottom" value="media_bottom"/>
                            </label>
                        </p>
                    </div>
                    <div class="col-4 col-md-4">
                        <p style="height: 135px"><img src="/exhibits-dashboard/static/images/item_layout_media_only.png" height="100"></p>
                        <p>
                            <label class="btn btn-default" for="item-layout-only" style="font-size: 15px">Media only, no text
                                <input class="item-layout-radio-btn" type="radio" name="layout"
                                       id="item-layout-only" value="media_only"/>
                            </label>
                        </p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-4 col-md-4">
                        <p style="height: 135px"><img src="/exhibits-dashboard/static/images/item_layout_text_only.png" height="100"></p>
                        <p>
                            <label class="btn btn-default" for="item-layout-text-only" style="font-size: 15px">Text only, no media
                                <input class="item-layout-radio-btn" type="radio" name="layout"
                                       id="item-layout-text-only" value="text_only"/>
                            </label>
                        </p>
                    </div>
                    <div class="col-4 col-md-4">
                        <p style="height: 135px"><img src="/exhibits-dashboard/static/images/item_layout_text_left_media_right.png" height="100"></p>
                        <p>
                            <label class="btn btn-default" for="item-layout-right" style="font-size: 15px">Text media pair, media on the right
                                <input class="item-layout-left-right-radio-btn" type="radio"
                                       name="layout" id="item-layout-right" value="media_right"/>
                            </label>
                        </p>
                    </div>
                    <div class="col-4 col-md-4">
                        <p style="height: 135px"><img src="/exhibits-dashboard/static/images/item_layout_media_left_text_right.png" height="100"></p>
                        <p>
                            <label class="btn btn-default" for="item-layout-left" style="font-size: 15px">Text media pair, media on the left
                                <input class="item-layout-left-right-radio-btn" type="radio"
                                       name="layout" id="item-layout-half" value="media_left"/>
                            </label>
                        </p>
                    </div>
                </div>
            </div>
        </div>
        <div id="item-media-widths-card" class="card" style="visibility: visible">
            <div class="card-header">
                <strong class="card-title mb-3">Item Media Widths</strong>
            </div>
            <div class="card-body">
                <div class="alert alert-info">
                    <i class="fa fa-info"></i> <span
                            id="info-message">Provide info to user about media widths</span>
                </div>
                <div class="row">
                    <div class="col-4 col-md-4">
                        <p style="height: 50px"><img src="/exhibits-dashboard/static/images/item_layout_half.png"></p>
                        <p>
                            <label class="btn btn-default" for="item-layout-half" style="font-size: 14px">Image width is one half of the exhibit item
                                <input type="radio" name="layout" id="item-layout-half" value="half"/>
                            </label>
                        </p>
                    </div>
                    <div class="col-4 col-md-4">
                        <p style="height: 50px"><img src="/exhibits-dashboard/static/images/item_layout_third.png"></p>
                        <p>
                            <label class="btn btn-default" for="item-layout-half" style="font-size: 14px">Image width is one half of the exhibit item
                                <input type="radio" name="layout" id="item-layout-half" value="half"/>
                            </label>
                        </p>
                    </div>
                    <div class="col-4 col-md-4">
                        <p style="height: 50px"><img src="/exhibits-dashboard/static/images/item_layout_quarter.png"></p>
                        <p>
                            <label class="btn btn-default" for="item-layout-quarter" style="font-size: 14px">Image width is one quarter of the exhibit item
                                <input type="radio" name="layout" id="item-layout-quarter" value="quarter"/>
                            </label>
                        </p>
                    </div>
                </div>
            </div>
        </div>

        <div id="item-styles-card" class="card" style="visibility: visible">
            <div class="card-header">
                <strong class="card-title mb-3">Item Styles</strong>
            </div>
            <div class="card-body">
                <div class="alert alert-info">
                    <i class="fa fa-info"></i> <span id="info-message">Provide info to user about item styles</span>
                </div>
                <div class="row">
                    <div class="col-6 col-md-6">
                        <div class="row form-group">
                            <div class="col-12 col-md-12">
                                <div class="input-group">
                                    <div class="input-group-btn">
                                        <input title="Color Picker" class="color-picker btn btn-default" type="color"
                                               id="item-background-color-picker" value="#ffffff">
                                    </div>
                                    <input type="text" id="item-background-color" name="item_background_color"
                                           placeholder="Item Background Color" class="form-control">

                                </div>
                            </div>
                        </div>
                        <div class="row form-group">
                            <div class="col-12 col-md-12">
                                <div class="input-group">
                                    <input type="number" id="nav-font-size" name="nav_font_size"
                                           placeholder="Navigation Font Size" class="form-control" min="1" max="50">
                                    <div class="input-group-append">
                                        <span class="input-group-text" id="basic-addon2">px</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-6 col-md-6">
                        <div class="row form-group">
                            <div class="col-12 col-md-12">
                                <div class="input-group">
                                    <div class="input-group-btn">
                                        <input title="Color Picker" class="color-picker btn btn-default" type="color"
                                               id="item-font-color-picker"
                                               value="#ffffff">
                                    </div>
                                    <input type="text" id="item-font-color" name="item_font_color"
                                           placeholder="Item Font Color" class="form-control">
                                </div>
                            </div>
                        </div>
                        <div class="row form-group">
                            <div class="col-12 col-md-12">
                                <div class="input-group">
                                    <select name="item_font" id="item-font"
                                            class="form-control-lg form-control text-muted">
                                        <option value="">Item Font</option>
                                        <option value="Helvetica">Helvetica</option>
                                        <option value="Arial">Arial</option>
                                        <option value="Times New Roman">Times New Roman</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div id="exhibit-submit-card" class="card" style="visibility: visible">
            <div class="card-body">
                <button class="btn btn-primary" type="button" id="save-item-btn">
                    <i class="fa fa-save"></i>&nbsp;&nbsp;Save
                </button>
            </div>
            <div class="card-footer text-muted"><small>Item</small></div>
        </div>
    </div>
    <div class="clearfix"></div>
    <%- include('partials/footer.ejs'); %>
</div>
<script src="https://code.jquery.com/jquery-3.7.0.js"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.14.4/dist/umd/popper.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/js/bootstrap.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/jquery-match-height@0.7.2/dist/jquery.matchHeight.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/interactjs/dist/interact.min.js"></script>
<script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
<script src="https://unpkg.com/dropzone@5/dist/min/dropzone.min.js"></script>
<script src="/exhibits-dashboard/static/libs/richtexteditor/rte.js"></script>
<script src='/exhibits-dashboard/static/libs/richtexteditor/plugins/all_plugins.js'></script>
<script src="/exhibits-dashboard/static/libs/axios-2.x/dist/axios.min.js"></script>
<script src="/exhibits-dashboard/static/libs/dompurify/purify.min.js"></script>
<script src="/exhibits-dashboard/static/app/http.module.js"></script>
<script src="/exhibits-dashboard/static/app/helper.module.js"></script>
<script src="/exhibits-dashboard/static/app/endpoints.module.js"></script>
<script src="/exhibits-dashboard/static/app/auth.module.js"></script>
<script src="/exhibits-dashboard/static/app/nav.module.js"></script>
<script src="/exhibits-dashboard/static/app/uploads.module.js"></script>
<script src="/exhibits-dashboard/static/app/exhibits.module.js"></script>
<script src="/exhibits-dashboard/static/app/items.module.js"></script>
<script src="/exhibits-dashboard/static/app/items.add.standard.item.form.module.js"></script>
<script>
    itemsAddStandardItemFormModule.init();
</script>
</body>
</html>