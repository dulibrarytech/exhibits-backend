        background-color: none;
        outline: none;
        border: 1px solid grey;
        height: 38px;
        width: 50px;
        cursor: pointer;
    }
</style>
<body>
<aside id="left-panel" class="left-panel">
    <nav class="navbar navbar-expand-sm navbar-default">
        <div id="main-menu" class="main-menu">
            <ul class="nav navbar-nav">
                <li class="active">
                    <a href="/exhibits-dashboard/exhibits">
                        <i class="menu-icon fa fa-home"></i>Exhibits Home
                    </a>
                </li>
                <li class="menu-title">Menu</li>
            </ul>
            <ul class="nav navbar-nav">
                <li id="preview-link"></li>
            </ul>
            <ul class="nav navbar-nav">
                <li>
                    <a id="back-to-items" href="#" data-keyboard="false">
                        <i class=" menu-icon fa fa-arrow-left"></i>Back to Items</a>
                </li>
            </ul>
            <ul id="items-menu" class="nav navbar-nav"></ul>
            <ul class="nav navbar-nav">
                <li>
                    <a href="#" id="logout" data-keyboard="false">
                        <i class="menu-icon fa fa-sign-out"></i>Logout
                    </a>
                </li>
            </ul>
        </div>
    </nav>
</aside>
<div id="right-panel" class="right-panel">
    <%- include('partials/main-header.ejs'); %>
    <div class="content" style="min-height: 875px;">
        <div id="message"></div>

        <%- include('partials/item-data-card.ejs'); %>

        <div id="item-layout-card" class="card">
            <div class="card-header">
                <strong class="card-title mb-3">Item Layout</strong>
            </div>
            <div class="card-body">
                <div class="row"></div>
                <div class="row">
                    <div class="col-4 col-md-4">
                        <p style="height: 135px"><img src="/exhibits-dashboard/static/images/item_layout_text_only.png"
                                                      height="100"></p>
                        <p>
                            <label class="btn btn-default" for="item-layout-text-only" style="font-size: 15px">Text
                                only, no media
                                <input type="radio"
                                       name="layout"
                                       id="item-layout-text-only"
                                       value="text_only" checked/>
                            </label>
                        </p>
                    </div>
                </div>
            </div>
        </div>
        
        <!--
        <div id="item-media-widths-card" class="card">
            <div class="card-header">
                <strong class="card-title mb-3">Item Media Widths</strong>
            </div>
            <div class="card-body">
                <%- // include('partials/item-media-widths.ejs'); %>
            </div>
        </div>
        -->

        <input type="radio" name="media_width" id="item-width-50" value="50" checked style="visibility: hidden"/>
        <div id="item-styles-card" class="card">
            <div class="card-header">
                <strong class="card-title mb-3">Item Styles</strong>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-6 col-md-6">
                        <p>
                        <div class="form-text text-muted" style="font-size: 17px">
                            <label for="item-background-color">Item Background Color</label>
                        </div>
                        </p>
                        <div class="row form-group">
                            <div class="col-12 col-md-12">
                                <div class="input-group">
                                    <div class="input-group-btn">
                                        <input title="Color Picker" class="color-picker btn btn-default" type="color"
                                               id="item-background-color-picker" value="#ffffff">
                                    </div>
                                    <input type="text" id="item-background-color" name="item_background_color"
                                           placeholder="i.e. #FFFFFF" class="form-control" style="height: 40px">

                                </div>
                            </div>
                        </div>
                        <div class="row form-group">
                            <div class="col-12 col-md-12">
                                <p>
                                <div class="form-text text-muted" style="font-size: 17px">
                                    <label for="item-font-size">Item Font Size</label>
                                </div>
                                </p>
                                <div class="input-group">
                                    <input type="number" id="item-font-size" name="item_font_size"
                                           placeholder="" class="form-control" min="1" max="50" style="height: 40px">
                                    <div class="input-group-append">
                                        <span class="input-group-text" id="basic-addon2">px</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-6 col-md-6">
                        <div class="row form-group">
                            <div class="col-12 col-md-12">
                                <p>
                                <div class="form-text text-muted" style="font-size: 17px">
                                    <label for="item-font-color">Item Font Color</label>
                                </div>
                                </p>
                                <div class="input-group">
                                    <div class="input-group-btn">
                                        <input title="Color Picker" class="color-picker btn btn-default" type="color"
                                               id="item-font-color-picker"
                                               value="#ffffff">
                                    </div>
                                    <input type="text" id="item-font-color" name="item_font_color"
                                           placeholder="i.e. #FFFFFF" class="form-control" style="height: 40px">
                                </div>
                            </div>
                        </div>
                        <div class="row form-group">
                            <div class="col-12 col-md-12">
                                <p>
                                <div class="form-text text-muted" style="font-size: 17px">
                                    <label for="item-font">Item Font</label>
                                </div>
                                </p>
                                <div class="input-group">
                                    <select name="item_font" id="item-font"
                                            class="form-control-lg form-control text-muted" style="height: 40px">
                                        <option value="">----------</option>
                                        <%- include('partials/exhibit-fonts-options-list.ejs'); %>
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div id="item-submit-card" class="card">
            <div class="card-body">
                <button class="btn btn-primary" type="button" id="save-item-btn">
                    <i class="fa fa-save"></i>&nbsp;&nbsp;Save
                </button>
            </div>
            <div class="card-footer text-muted"><small>Item</small></div>
        </div>
    </div>
    <div class="clearfix"></div>
    <%- include('partials/footer.ejs'); %>
    <%- include('partials/preview-html-modal.ejs'); %>
</div>
