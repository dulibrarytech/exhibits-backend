        <div id="exhibit-page-layout-card" class="card">
            <div class="card-header">
                <strong class="card-title mb-3">Exhibit Page Layout</strong>
            </div>
            <div class="card-body">
                <div class="alert alert-info">
                    <i class="fa fa-info"></i> <span
                            id="info-message">Provide info to user about exhibit page layout</span>
                </div>
                <div class="row">
                    <div class="col-6 col-md-6">
                        <p><img src="/exhibits-dashboard/static/images/page_layout_1.png"></p>
                        <p>
                            <label class="btn btn-default" for="exhibit-page-layout-1">
                                <input type="radio" class="btn-check" name="page_layout"
                                       id="exhibit-page-layout-1" value="top_nav" autocomplete="off" checked/>
                                <span style="font-size: 12px">Exhibit navigation bar at the top of the page</span>
                            </label>
                        </p>
                    </div>
                    <div class="col-6 col-md-6">
                        <p><img src="/exhibits-dashboard/static/images/page_layout_2.png"></p>
                        <p>
                            <label class="btn btn-default" for="exhibit-page-layout-2">
                                <input type="radio" class="btn-check" name="page_layout"
                                       id="exhibit-page-layout-2" value="side_nav" autocomplete="off"/>
                                <span style="font-size: 12px">Exhibit navigation sidebar</span>
                            </label>
                        </p>
                    </div>
                </div>
            </div>
        </div>
        <div id="exhibit-styles-card" class="card">
            <div class="card-header">
                <strong class="card-title mb-3">Exhibit Styles</strong>
            </div>
            <div class="card-body">
                <div class="alert alert-info">
                    <i class="fa fa-info"></i> <span id="info-message">Provide info to user about exhibit styles</span>
                </div>
                <div class="row">
                    <div class="col-6 col-md-6">
                        <p>
                    <span class="form-text text-muted"
                          style="font-size: 17px">Apply Custom Styles to Navigation Menu</span>
                        </p>
                        <div class="row form-group">
                            <div class="col-12 col-md-12">
                                <p>
                                <div class="form-text text-muted" style="font-size: 17px">
                                    <label for="nav-background-color">Navigation Background Color</label>
                                </div>
                                </p>
                                <div class="input-group">
                                    <div class="input-group-btn">
                                        <input title="Color Picker" class="color-picker btn btn-default" type="color"
                                               id="nav-background-color-picker" value="#ffffff">
                                    </div>
                                    <input type="text" id="nav-background-color" name="nav_background_color"
                                           placeholder="i.e. #FFFFFF" class="form-control" style="height: 40px">
                                </div>
                            </div>
                        </div>
                        <div class="row form-group">
                            <div class="col-12 col-md-12">
                                <p>
                                <div class="form-text text-muted" style="font-size: 17px">
                                    <label for="nav-font-color">Navigation Font Color</label>
                                </div>
                                </p>
                                <div class="input-group">
                                    <div class="input-group-btn">
                                        <input title="Color Picker" class="color-picker btn btn-default" type="color"
                                               id="nav-font-color-picker"
                                               value="#ffffff">
                                    </div>
                                    <input type="text" id="nav-font-color" name="nav_font_color"
                                           placeholder="i.e. #FFFFFF" class="form-control" style="height: 40px">
                                </div>
                            </div>
                        </div>
                        <div class="row form-group">
                            <div class="col-12 col-md-12">
                                <p>
                                <div class="form-text text-muted" style="font-size: 17px">
                                    <label for="nav-font-size">Navigation Font Size</label>
                                </div>
                                </p>
                                <div class="input-group">
                                    <input type="number" id="nav-font-size" name="nav_font_size"
                                           placeholder="" class="form-control" min="1" max="50" style="height: 40px">
                                    <div class="input-group-append">
                                        <span class="input-group-text" id="basic-addon2">px</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row form-group">
                            <div class="col-12 col-md-12">
                                <p>
                                <div class="form-text text-muted" style="font-size: 17px">
                                    <label for="nav_font">Navigation Font</label>
                                </div>
                                </p>
                                <div class="input-group">
                                    <select name="nav_font" id="nav-font"
                                            class="form-control-lg form-control text-muted" style="height: 40px">
                                        <option value="">----------</option>
                                        <%- include('partials/exhibit-fonts-options-list.ejs'); %>
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-6 col-md-6">
                        <p>
                            <span class="form-text text-muted"
                                  style="font-size: 17px">Apply Custom Styles to Exhibit</span>
                        </p>
                        <div class="row form-group">
                            <div class="col-12 col-md-12">
                                <p>
                                <div class="form-text text-muted" style="font-size: 17px">
                                    <label for="template-background-color">Exhibit Background Color</label>
                                </div>
                                </p>
                                <div class="input-group">
                                    <div class="input-group-btn">
                                        <input title="Color Picker" class="color-picker btn btn-default" type="color"
                                               id="template-background-color-picker" value="#ffffff">
                                    </div>
                                    <input type="text" id="template-background-color" name="template_background_color"
                                           placeholder="i.e. #FFFFFF" class="form-control" style="height: 40px">
                                </div>
                            </div>
                        </div>
                        <div class="row form-group">
                            <div class="col-12 col-md-12">
                                <p>
                                <div class="form-text text-muted" style="font-size: 17px">
                                    <label for="template-font-color">Exhibit Font Color</label>
                                </div>
                                </p>
                                <div class="input-group">
                                    <div class="input-group-btn">
                                        <input title="Color Picker" class="color-picker btn btn-default" type="color"
                                               id="template-font-color-picker"
                                               value="#ffffff">
                                    </div>
                                    <input type="text" id="template-font-color" name="template_font_color"
                                           placeholder="i.e. #FFFFFF" class="form-control" style="height: 40px">
                                </div>
                            </div>
                        </div>
                        <div class="row form-group">
                            <div class="col-12 col-md-12">
                                <p>
                                <div class="form-text text-muted" style="font-size: 17px">
                                    <label for="template-font-size">Exhibit Font Size</label>
                                </div>
                                </p>
                                <div class="input-group">
                                    <input type="number" id="template-font-size" name="template_font_size"
                                           placeholder="" class="form-control" min="1" max="50" style="height: 40px">
                                    <div class="input-group-append">
                                        <span class="input-group-text" id="basic-addon2">px</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row form-group">
                            <div class="col-12 col-md-12">
                                <p>
                                <div class="form-text text-muted" style="font-size: 17px">
                                    <label for="template-font">Exhibit Font</label>
                                </div>
                                </p>
                                <div class="input-group">
                                    <select name="template_font" id="template-font"
                                            class="form-control-lg form-control text-muted" style="height: 40px">
                                        <option value="">----------</option>
                                        <%- include('partials/exhibit-fonts-options-list.ejs'); %>
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div id="exhibit-submit-card" class="card">
            <div class="card-body">
                <input type="hidden" name="exhibit_template" id="exhibit-template"
                       value="vertical_scroll"/>
                <button class="btn btn-primary" type="button" id="save-exhibit-btn">
                    <i class="fa fa-save"></i>&nbsp;&nbsp;Save
                </button>
            </div>
            <div class="card-footer text-muted"><small>Exhibit</small></div>
        </div>
    </div>
    <div class="clearfix"></div>
    <%- include('partials/footer.ejs'); %>
</div>
