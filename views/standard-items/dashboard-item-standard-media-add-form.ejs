<%- include('../partials/header.ejs'); %>
<style>
    .color-picker {
        background-color: none;
        outline: none;
        border: 1px solid grey;
        height: 38px;
        width: 50px;
        cursor: pointer;
    }
</style>
<body>
<aside id="left-panel" class="left-panel">
    <nav class="navbar navbar-expand-sm navbar-default">
        <div id="main-menu" class="main-menu">
            <ul class="nav navbar-nav">
                <li class="active">
                    <a href="/exhibits-dashboard/exhibits">
                        <i class="menu-icon fa fa-home"></i>Exhibits Home
                    </a>
                </li>
                <li class="menu-title">Menu</li>
            </ul>
            <ul class="nav navbar-nav">
                <li id="preview-link"></li>
            </ul>
            <ul class="nav navbar-nav">
                <li>
                    <a id="back-to-items" href="#" data-keyboard="false">
                        <i class=" menu-icon fa fa-arrow-left"></i>Back to Items</a>
                </li>
            </ul>
            <ul id="items-menu" class="nav navbar-nav"></ul>
            <ul class="nav navbar-nav">
                <li>
                    <a href="#" id="logout" data-keyboard="false">
                        <i class="menu-icon fa fa-sign-out"></i>Logout
                    </a>
                </li>
            </ul>
        </div>
    </nav>
</aside>
<div id="right-panel" class="right-panel">
    <%- include('../partials/main-header.ejs'); %>
    <div class="content" style="min-height: 875px;">
        <div id="message"></div>
        <%- include('partials/item-data-card.ejs'); %>
        <div id="item-media-card" class="card">
            <div class="card-header">
                <strong class="card-title mb-3">Item Media</strong>
            </div>
            <div class="card-body">
                <div class="container">
                    <ul class="nav nav-tabs" id="mediaTab" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" id="upload-media-tab" data-toggle="tab" href="#upload-media"
                               role="tab" aria-controls="upload-media" aria-selected="true">Upload Media</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="import-audio-video-tab" data-toggle="tab" href="#import-audio-video"
                               role="tab" aria-controls="import-audio-video" aria-selected="false">Import
                                Audio/Video</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="import-repo-media-tab" data-toggle="tab" href="#import-repo-media"
                               role="tab" aria-controls="import-repo-media" aria-selected="false">Import Repository
                                Media</a>
                        </li>
                    </ul>
                    <div class="tab-content" id="mediaTabContent">
                        <div class="tab-pane fade show active" id="upload-media" role="tabpanel"
                             aria-labelledby="upload-media-tab"><%- include('../partials/tab-upload-media.ejs'); %></div>
                        <div class="tab-pane fade" id="import-audio-video" role="tabpanel"
                             aria-labelledby="import-audio-video-tab"><%- include('../partials/tab-import-audio-video.ejs'); %></div>
                        <div class="tab-pane fade" id="import-repo-media" role="tabpanel"
                             aria-labelledby="import-repo-media-tab"><%- include('../partials/tab-import-repo-media.ejs'); %></div>
                    </div>
                </div>

                <%- include('partials/item-alt-text.ejs'); %>
                <%- include('partials/wrap-text-item.ejs'); %>
                <%- include('partials/embed-item.ejs'); %>
                <%- include('partials/media-padding.ejs'); %>

                <input type="hidden" id="is-repo-item" name="is_repo_item" value="0">
            </div>
        </div>
        <div id="item-layout-card" class="card">
            <div class="card-header">
                <strong class="card-title mb-3">Item Layout</strong>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-4 col-md-4">
                        <p style="height: 135px"><img
                                    src="/exhibits-dashboard/static/images/item_layout_text_left_media_right.png"
                                    height="100"></p>
                        <p>
                            <label class="btn btn-default" for="item-layout-media-right" style="font-size: 15px">Text
                                media pair, media on the right
                                <input type="radio"
                                       name="layout"
                                       id="item-layout-media-right"
                                       value="media_right" checked/>
                            </label>
                        </p>
                    </div>
                    <div class="col-4 col-md-4">
                        <p><img src="/exhibits-dashboard/static/images/item_layout_media_top_text_bottom.png"
                                width="145" height="135"></p>
                        <p>
                            <label class="btn btn-default" for="item-layout-media-top" style="font-size: 15px">Text
                                media pair,
                                text below media
                                <input type="radio"
                                       name="layout"
                                       id="item-layout-media-top"
                                       value="media_top"/>
                            </label>
                        </p>
                    </div>
                    <div class="col-4 col-md-4">
                        <p><img src="/exhibits-dashboard/static/images/item_layout_text_top_media_bottom.png"
                                width="135" height="135"></p>
                        <p>
                            <label class="btn btn-default" for="item-layout-media-bottom" style="font-size: 15px">Text
                                media
                                pair, text above the media
                                <input type="radio"
                                       name="layout"
                                       id="item-layout-media-bottom"
                                       value="media_bottom"/>
                            </label>
                        </p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-4 col-md-4">
                        <p style="height: 135px"><img src="/exhibits-dashboard/static/images/item_layout_media_only.png"
                                                      height="100"></p>
                        <p>
                            <label class="btn btn-default" for="item-layout-media-only" style="font-size: 15px">Media
                                only, no text
                                <input type="radio"
                                       name="layout"
                                       id="item-layout-media-only"
                                       value="media_only"/>
                            </label>
                        </p>
                    </div>
                    <div class="col-4 col-md-4">
                        <p style="height: 135px"><img
                                    src="/exhibits-dashboard/static/images/item_layout_media_left_text_right.png"
                                    height="100"></p>
                        <p>
                            <label class="btn btn-default" for="item-layout-media-left" style="font-size: 15px">Text
                                media pair, media on the left
                                <input type="radio"
                                       name="layout"
                                       id="item-layout-media-left"
                                       value="media_left"/>
                            </label>
                        </p>
                    </div>
                </div>
            </div>
        </div>
        <div id="item-media-widths-card" class="card">
            <div class="card-header">
                <strong class="card-title mb-3">Item Media Widths</strong>
            </div>
            <div class="card-body">
                <%- include('partials/item-media-widths.ejs'); %>
            </div>
        </div>

        <%- include('partials/standard-item-styles.ejs'); %>

        <div id="item-submit-card" class="card">
            <div class="card-body">
                <button class="btn btn-primary" type="button" id="save-item-btn">
                    <i class="fa fa-save"></i>&nbsp;&nbsp;Save
                </button>
            </div>
            <div class="card-footer text-muted"><small>Item</small></div>
        </div>
    </div>
    <div class="clearfix"></div>
    <%- include('../partials/footer.ejs'); %>
    <%- include('../partials/preview-html-modal.ejs'); %>
</div>
<script src="https://code.jquery.com/jquery-3.7.0.js"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.min.js"></script>
