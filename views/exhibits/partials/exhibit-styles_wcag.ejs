<style>
    /* Heading structure */
    .section-heading {
        font-size: 0.875rem; /* 14px */
        font-weight: bold;
        color: #6c757d;
        margin-bottom: 1rem;
        padding: 0;
        border: none;
    }

    /* Form labels */
    .form-label {
        font-size: 0.8125rem; /* 13px */
        color: #6c757d;
        display: block;
        margin-bottom: 0.25rem;
        font-weight: 500;
    }

    /* Helper text */
    .helper-text {
        font-size: 0.75rem; /* 12px */
        margin-bottom: 0.5rem;
        margin-top: 0;
    }

    /* Fieldsets */
    .style-fieldset {
        border: none;
        padding: 0;
        margin: 0;
    }

    /* Color input groups */
    .color-input-group {
        margin-bottom: 1rem;
    }

    .color-text-input {
        height: 40px;
        font-family: monospace;
    }

    .color-picker {
        height: 40px;
        width: 50px;
        padding: 2px;
        border: 1px solid #ced4da;
        cursor: pointer;
    }

    .color-picker:hover {
        border-color: #80bdff;
    }

    .color-picker:focus {
        outline: 2px solid #0056b3;
        outline-offset: 2px;
        border-color: #80bdff;
    }

    /* Size inputs */
    .size-input {
        height: 40px;
    }

    /* Select dropdowns */
    .form-select {
        height: 40px;
    }

    /* Input group text */
    .input-group-text {
        min-width: 40px;
        justify-content: center;
    }

    /* Focus states */
    .form-control:focus,
    .form-select:focus {
        border-color: #80bdff;
        outline: 2px solid #0056b3;
        outline-offset: 2px;
        box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
    }

    /* Screen reader only class */
    .sr-only {
        position: absolute;
        width: 1px;
        height: 1px;
        padding: 0;
        margin: -1px;
        overflow: hidden;
        clip: rect(0, 0, 0, 0);
        white-space: nowrap;
        border-width: 0;
    }

    /* Ensure adequate spacing */
    .form-group {
        margin-bottom: 1.5rem;
    }

    /* Disabled option styling */
    option[disabled] {
        color: #6c757d;
        font-style: italic;
    }
</style>
