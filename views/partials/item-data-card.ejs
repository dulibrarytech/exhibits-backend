<div id="item-data-card" class="card">
    <div class="card-header">
        <strong class="card-title mb-3">'<span id="exhibit-title"></span>' exhibit</strong>
    </div>
    <div class="card-body">
        <div class="alert alert-info"><i class="fa fa-info"></i> Provide info to user about this form</div>
        <div class="row">
            <div class="col-12 col-md-12">
                <div class="row form-group">
                    <div class="col-12">
                        <div class="form-text text-muted" style="font-size: 17px">
                            Title <small><em>(Optional)</em></small>
                            &nbsp;&nbsp;<a onclick="helperModule.preview_html('item-title-input');return false;" data-toggle="modal" data-target=".preview-html" class="btn-xs btn-light"><span style="padding: 5px"><i class="fa fa-code"></i> <small>Preview Field</small></span></a>
                        </div>
                        <small class="form-text text-muted"><i class="fa fa-exclamation-circle"></i> <em>The
                                item title becomes a subheading in the navigation</em></small>
                        <span id="item-title-error" class="is-error"></span>
                        <textarea id="item-title-input" class="form-control" name="item_title_input"
                                  rows="4"></textarea>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12 col-md-12">
                <div class="row form-group">
                    <div class="col-12">
                        <div class="form-text text-muted" style="font-size: 17px">Text
                            <small><em>(Optional)</em></small>
                            &nbsp;&nbsp;<a onclick="helperModule.preview_html('item-text-input');return false;" data-toggle="modal" data-target=".preview-html" class="btn-xs btn-light"><span style="padding: 5px"><i class="fa fa-code"></i> <small>Preview Field</small></span></a>
                        </div>
                        <textarea id="item-text-input" class="form-control" name="item_text_input"
                                  rows="4"></textarea>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12 col-md-12">
                <div class="row form-group">
                    <div class="col-12">
                        <small class="form-text text-muted"><i class="fa fa-exclamation-circle"></i> <em>Text
                                will be wrapped around item by default</em></small>
                        <label class="form-text text-muted" style="font-size: 17px" for="media-padding">Wrap
                            Text&nbsp;
                            <input type="checkbox" id="wrap-text" name="wrap_text" checked>
                        </label>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12 col-md-12">
                <div class="row form-group">
                    <div class="col-12">
                        <div class="form-text text-muted" style="font-size: 17px">Caption
                            <small><em>(Optional)</em></small></div>
                        <textarea id="item-caption-input" class="form-control" name="item_caption_input"
                                  rows="4"></textarea>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>