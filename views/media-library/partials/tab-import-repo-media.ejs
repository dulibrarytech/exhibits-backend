<div class="col-12">
    <!-- Search Form -->
    <form class="row form-group" aria-label="Import repository media" id="repo-search-form">
        <div class="col-12 col-md-7 mb-3 mb-md-0">
            <label for="repo-uuid" class="sr-only">Search Repository</label>
            <input type="text"
                   class="form-control"
                   id="repo-uuid"
                   name="repo_uuid"
                   placeholder="Search Repository"
                   aria-describedby="repo-uuid-help"
                   autocomplete="off">
            <small id="repo-uuid-help" class="form-text text-muted">
                Enter a search term (e.g., uuid, title, creator, subject, identifier)
            </small>
        </div>
        <div class="col-auto">
            <button type="button"
                    id="repo-uuid-btn"
                    class="btn btn-primary">
                <i class="fa fa-search" aria-hidden="true"></i>
                Search
            </button>
        </div>
        <div class="col-auto">
            <button type="button"
                    id="repo-import-btn"
                    class="btn btn-success"
                    style="display: none;">
                <i class="fa fa-download" aria-hidden="true"></i>
                Import Selected (<span id="repo-selected-count">0</span>)
            </button>
        </div>
    </form>

    <!-- Message Area -->
    <div id="repo-search-message"
         role="status"
         aria-live="polite"
         class="mt-3">
    </div>

    <!-- Search Results Container -->
    <div id="repo-search-results"
         role="region"
         aria-live="polite"
         aria-label="Repository search results"
         class="mt-3">
        <!-- Results will be rendered here -->
        <div class="text-center py-4 text-muted"></div>
    </div>
</div>

