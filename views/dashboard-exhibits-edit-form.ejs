<%- include('partials/header.ejs'); %>
<style>
    .color-picker {
        background-color: none;
        outline: none;
        border: 1px solid grey;
        height: 38px;
        width: 50px;
        cursor: pointer;
    }
</style>
<body>
<aside id="left-panel" class="left-panel">
    <nav class="navbar navbar-expand-sm navbar-default">
        <div id="main-menu" class="main-menu collapse navbar-collapse">
            <ul class="nav navbar-nav">
                <li class="active">
                    <a href="/dashboard/exhibits"><i class="menu-icon fa fa-home"></i>Exhibits Home </a>
                </li>
                <li class="menu-title">Menu</li>
                <li>
                    <a href="/dashboard/exhibits" data-keyboard="false">
                        <i class=" menu-icon fa fa-arrow-left"></i>Back to Exhibits</a>
                </li>
                <li>
                    <a href="/dashboard/trash"> <i class="menu-icon fa fa-trash-o"></i>Trash</a>
                </li>
                <li>
                    <a href="#" id="logout"> <i class="menu-icon fa fa-sign-out"></i>Logout</a>
                </li>
            </ul>
        </div>
    </nav>
</aside>
<div id="right-panel" class="right-panel">
    <header id="header" class="header">
        <div class="top-left">
            <div class="navbar-header">
                <a class="navbar-brand" href="./"><img src="<%= host %>/images/du-logo.png" alt="Logo"></a>
            </div>
        </div>
        <div class="top-right"></div>
    </header>
    <div class="content" style="min-height: 875px;">
        <div id="message"></div>
        <div id="exhibit-card" class="card" style="visibility: visible">
            <div class="card-header">
                <strong class="card-title mb-3"><span id="exhibit-title"></span> exhibit</strong>
            </div>
            <div class="card-body">
                <p>
                    <button class="btn btn-default">Exhibit data</button>
                </p>

                <div class="alert alert-info"><i class="fa fa-info"></i> Provide info to user about this form</div>

                <div class="row form-group">
                    <div class="col-12 col-md-12">
                        <div class="form-text text-muted" style="font-size: 17px"><span style="color: red">*</span>
                            Title
                        </div>
                        <span id="exhibit-title-error" class="is-error"></span>
                        <div id="exhibit-title-input" style="height: 100px"></div>
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col-12 col-md-12">
                        <div class="form-text text-muted" style="font-size: 17px">Sub Title</div>
                        <div id="exhibit-sub-title-input" style="height: 100px"></div>
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col-12 col-md-12">
                        <div class="form-text text-muted" style="font-size: 17px">Alert Text</div>
                        <div id="exhibit-alert-text-input" style="height: 100px"></div>
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col-12 col-md-12">
                        <div class="form-text text-muted" style="font-size: 17px">Description</div>
                        <div id="exhibit-description-input" class="col-12 col-md-12"></div>
                    </div>
                </div>
                <br>
                <hr>
                <p>
                    <button class="btn btn-default">Exhibit media</button>
                </p>
                <div class="alert alert-info">
                    <i class="fa fa-info"></i> <span id="info-message">Exhibit media, hero image and exhibit thumbnail can be replaced here</span>
                </div>
                <span class="upload-error"></span>
                <div class="col-12 col-md-12">
                    <p><span id="hero-image-filename-display"></span>&nbsp;&nbsp;
                        <span><a id="hero-trash" title="Trash" href="#"><i class="fa fa-trash"></i></a></span>
                    </p>
                    <input type="hidden" id="hero-image" name="hero_image">
                </div>
                <form class="form-horizontal dropzone" id="hero-dropzone" action="/uploads"
                      method="post"
                      enctype="multipart/form-data">
                </form>
                <br>
                <hr>
                <div class="col-12 col-md-12">
                    <p>
                        <span id="thumbnail-filename-display"></span>&nbsp;&nbsp;
                        <span><a id="thumbnail-trash" title="Trash" href="#"><i class="fa fa-trash"></i></a></span>
                    </p>
                    <input type="hidden" id="thumbnail-image" name="thumbnail">
                </div>
                <form class="form-horizontal dropzone" id="thumbnail-dropzone" action="/uploads"
                      method="post"
                      enctype="multipart/form-data">
                </form>
                <br>
                <hr>
                <p>
                    <button class="btn btn-default">Exhibit banner</button>
                </p>
                <div class="alert alert-info">
                    <i class="fa fa-info"></i> <span id="info-message">Provide info to user about exhibit banner</span>
                </div>
                <div class="row form-group">
                    <div class="col-12 col-md-12">
                        <table class="table table-striped">
                            <tr>
                                <td style="width: 30%;padding: 5px">
                                    <img src="<%= host %>/images/banner_1.png">
                                </td>
                                <td style="60%">
                                    <label class="btn btn-default" for="exhibit-banner-1">Hero image above
                                        description, title text over image</label>
                                </td>
                                <td style="width: 10%">
                                    <input type="radio" class="btn-check" name="banner_template"
                                           id="exhibit-banner-1" value="banner_1" autocomplete="off"/>
                                </td>
                            </tr>
                            <tr>
                                <td style="width: 30%;padding: 5px">
                                    <img src="<%= host %>/images/banner_2.png">
                                </td>
                                <td style="60%;">
                                    <label class="btn btn-default" for="exhibit-banner-2">Hero image above title and
                                        description</label>
                                </td>
                                <td style="width: 10%">
                                    <input type="radio" class="btn-check" name="banner_template"
                                           id="exhibit-banner-2" value="banner_2" autocomplete="off"/>
                                </td>
                            </tr>
                            <tr>
                                <td style="width: 30%;padding: 5px" ;>
                                    <img src="<%= host %>/images/banner_3.png">
                                </td>
                                <td style="60%;">
                                    <label class="btn btn-default" for="exhibit-banner-3">Hero image above
                                        description, no title</label>
                                </td>
                                <td style="width: 10%">
                                    <input type="radio" class="btn-check" name="banner_template"
                                           id="exhibit-banner-3" value="banner_3" autocomplete="off"/>
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>
                <br>
                <hr>
                <p>
                    <button class="btn btn-default">Exhibit page layout</button>
                </p>
                <div class="alert alert-info">
                    <i class="fa fa-info"></i> <span
                            id="info-message">Provide info to user about exhibit page layout</span>
                </div>
                <div class="row form-group">
                    <div class="col-12 col-md-12">
                        <table class="table table-striped">
                            <tr>
                                <td style="width: 30%;padding: 5px">
                                    <img src="<%= host %>/images/page_layout_1.png">
                                </td>
                                <td style="60%">
                                    <label class="btn btn-default" for="exhibit-banner-1">Exhibit navigation bar at
                                        the top of the page</label>
                                </td>
                                <td style="width: 10%">
                                    <input type="radio" class="btn-check" name="page_layout"
                                           id="exhibit-page-layout-1" value="top_nav" autocomplete="off"/>
                                </td>
                            </tr>
                            <tr>
                                <td style="width: 30%;padding: 5px">
                                    <img src="<%= host %>/images/page_layout_2.png">
                                </td>
                                <td style="60%;">
                                    <label class="btn btn-default" for="exhibit-banner-2">Exhibit navigation
                                        sidebar</label>
                                </td>
                                <td style="width: 10%">
                                    <input type="radio" class="btn-check" name="page_layout"
                                           id="exhibit-page-layout-2" value="side_nav" autocomplete="off"/>
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>
                <br>
                <hr>
                <input type="hidden" name="template" id="exhibit-template"
                       value="vertical_scroll"/>
                <p>
                    <button class="btn btn-default">Exhibit styles</button>
                </p>
                <div class="alert alert-info">
                    <i class="fa fa-info"></i> <span id="info-message">Provide info to user about exhibit styles</span>
                </div>
                <p>
                    <span class="form-text text-muted"
                          style="font-size: 17px">Apply Custom Styles to Navigation Menu</span>
                </p>
                <div class="row form-group">
                    <div class="col-12 col-md-12">
                        <div class="input-group">
                            <div class="input-group-btn">
                                <input title="Color Picker" class="color-picker btn btn-default" type="color"
                                       id="nav-menu-background-color-picker" value="#ffffff">
                            </div>
                            <input type="text" id="nav-menu-background-color" name="nav_menu_background_color"
                                   placeholder="Navigation Menu Background Color" class="form-control">

                        </div>
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col-12 col-md-12">
                        <div class="input-group">
                            <div class="input-group-btn">
                                <input title="Color Picker" class="color-picker btn btn-default" type="color"
                                       id="nav-menu-font-color-picker"
                                       value="#ffffff">
                            </div>
                            <input type="text" id="nav-menu-font-color" name="nav_menu_font_color"
                                   placeholder="Navigation Menu Font Color" class="form-control">
                        </div>
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col-12 col-md-12">
                        <div class="input-group">
                            <select name="nav_menu_font" id="nav-menu-font"
                                    class="form-control-lg form-control text-muted">
                                <option value="">Navigation Menu Font</option>
                                <option value="Helvetica">Helvetica</option>
                                <option value="Arial">Arial</option>
                                <option value="Times New Roman">Times New Roman</option>
                            </select>
                        </div>
                    </div>
                </div>
                <br>
                <!--
                <p>
                    <span class="form-text text-muted" style="font-size: 17px">Apply Custom Styles to Navigation Menu Links</span>
                </p>
                <div class="input-group">
                    <div class="input-group-btn">
                        <input title="Color Picker" class="color-picker btn btn-default" type="color"
                               id="nav-menu-links-font-color-picker" value="#ffffff">
                    </div>
                    <input type="text" id="nav-menu-links-font-color" name="nav_menu_links_font_color"
                           placeholder="Navigation Menu Links Font Color" class="form-control">

                </div>
                <br>
                -->
                <hr>
                <button class="btn btn-primary" type="button" id="save-exhibit-btn">
                    <i class="fa fa-save"></i>&nbsp;&nbsp;Save
                </button>
            </div>
            <div class="card-footer text-muted"><small>Exhibit</small></div>
        </div>
    </div>
    <div class="clearfix"></div>
    <%- include('partials/footer.ejs'); %>
</div>
<script src="https://code.jquery.com/jquery-3.7.0.js"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.14.4/dist/umd/popper.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/js/bootstrap.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/jquery-match-height@0.7.2/dist/jquery.matchHeight.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/interactjs/dist/interact.min.js"></script>
<script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
<script src="https://unpkg.com/dropzone@5/dist/min/dropzone.min.js"></script>
<script src="<%= host %>/libs/richtexteditor/rte.js"></script>
<script src='<%= host %>/libs/richtexteditor/plugins/all_plugins.js'></script>
<script src="<%= host %>/libs/axios-2.x/dist/axios.min.js"></script>
<script src="<%= host %>/libs/dompurify/purify.min.js"></script>
<script src="<%= host %>/app/http.module.js"></script>
<script src="<%= host %>/app/helper.module.js"></script>
<script src="<%= host %>/app/endpoints.module.js"></script>
<script src="<%= host %>/app/auth.module.js"></script>
<script src="<%= host %>/app/uploads.module.js"></script>
<script src="<%= host %>/app/exhibits.module.js"></script>
<script src="<%= host %>/app/exhibits.edit.form.module.js"></script>
<script>
    exhibitsEditFormModule.init();
    uploadsModule.upload_exhibit_hero_image();
    uploadsModule.upload_exhibit_thumbnail_image();
    document.querySelector('#logout').addEventListener('click', authModule.logout);
    document.querySelector('#hero-trash').style.display = 'none';
    document.querySelector('#thumbnail-trash').style.display = 'none';

    // bind color pickers to input fields
    document.querySelector('#nav-menu-background-color-picker').addEventListener('input', () => {
        if (document.querySelector('#nav-menu-background-color')) {
            document.querySelector('#nav-menu-background-color').value = document.querySelector('#nav-menu-background-color-picker').value;
        }
    });

    document.querySelector('#nav-menu-font-color-picker').addEventListener('input', () => {
        if (document.querySelector('#nav-menu-font-color')) {
            document.querySelector('#nav-menu-font-color').value = document.querySelector('#nav-menu-font-color-picker').value;
        }
    });
    /*
    document.querySelector('#nav-menu-links-font-color-picker').addEventListener('input', () => {
        if (document.querySelector('#nav-menu-links-font-color')) {
            document.querySelector('#nav-menu-links-font-color').value = document.querySelector('#nav-menu-links-font-color-picker').value;
        }
    });

     */

</script>
</body>
</html>
