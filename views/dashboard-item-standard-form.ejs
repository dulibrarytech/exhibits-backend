<%- include('partials/header.ejs'); %>
<style>

    .color-picker {
        background-color: none;
        outline: none;
        border: 1px solid grey;
        height: 38px;
        width: 50px;
        cursor: pointer;
    }

</style>
<body>
<aside id="left-panel" class="left-panel">
    <nav class="navbar navbar-expand-sm navbar-default">
        <div id="main-menu" class="main-menu">
            <ul class="nav navbar-nav"><!-- style="visibility: hidden" -->
                <li class="active">
                    <a href="/dashboard/exhibits">
                        <i class="menu-icon fa fa-home"></i>Exhibits Home
                    </a>
                </li>
                <li class="menu-title">Menu</li>
            </ul>
            <ul class="nav navbar-nav"><li id="preview-link"></li></ul>
            <ul id="items-menu" class="nav navbar-nav"></ul>
            <ul class="nav navbar-nav">
                <li>
                    <a href="#" id="logout" data-keyboard="false">
                        <i class="menu-icon fa fa-sign-out"></i>Logout
                    </a>
                </li>
            </ul>
        </div>
    </nav>
</aside>
<div id="right-panel" class="right-panel">
    <header id="header" class="header">
        <div class="top-left">
            <div class="navbar-header">
                <a class="navbar-brand" href="./"><img src="<%= host %>/images/du-logo.png" alt="Logo"></a>
            </div>
        </div>
        <div class="top-right"></div>
    </header>
    <div class="content" style="min-height: 875px;">
        <div id="message"></div>
        <div id="item-card" class="card" style="visibility: hidden">
            <div class="card-header">
                <strong class="card-title mb-3">Add Item to '<span id="exhibit-title"></span>' exhibit</strong>
            </div>
            <div class="card-body">
                <div id="create-item-form">
                    <p>
                        <button class="btn btn-default">Item data</button>
                    </p>
                    <div class="alert alert-info"><i class="fa fa-info"></i>
                        <span id="info-message">Provide info to user about item data form</span>
                    </div>
                    <div class="row form-group">
                        <div class="col-12 col-md-12">
                            <input type="text" id="item-title" name="title"
                                   placeholder="Item Title" class="form-control" required>
                            <span id="item-title-error" class="is-error">
                                <small class="form-text text-muted">* Required | <i class="fa fa-exclamation-circle"></i> <em>The item title becomes a subheading in the navigation</em></small>
                            </span>
                        </div>
                    </div>
                    <div class="row form-group">
                        <div class="col-12 col-md-12">
                            <textarea id="item-caption" class="form-control" name="caption"
                                      placeholder="Item Caption"></textarea>
                        </div>
                    </div>
                    <div class="row form-group">
                        <div class="col-12 col-md-12">
                            <textarea id="item-description" class="form-control" name="description"
                                      placeholder="Item Description"></textarea>
                        </div>
                    </div>
                    <div class="row form-group">
                        <div class="col-12 col-md-12">
                            <textarea id="item-text" class="form-control" name="text"
                                      placeholder="Item Text"></textarea>
                        </div>
                    </div>
                    <div class="row form-group is-grid-item" style="visibility: hidden">
                        <div class="col-12 col-md-12">
                            <input type="text" id="item-date" name="date"
                                   placeholder="Item Date" class="form-control">
                        </div>
                    </div>
                    <br>
                    <hr>
                    <p>
                        <button class="btn btn-default">Item media</button>
                    </p>
                    <div class="default-tab">
                        <nav>
                            <div class="nav nav-tabs" id="nav-tab" role="tablist">
                                <a class="nav-item nav-link active" id="nav-home-tab" data-toggle="tab"
                                   href="#nav-home" role="tab" aria-controls="nav-home" aria-selected="true">Upload
                                    Media</a>
                                <a class="nav-item nav-link" id="nav-profile-tab" data-toggle="tab"
                                   href="#nav-profile" role="tab" aria-controls="nav-profile" aria-selected="false">Import
                                    Media from Repository</a>
                            </div>
                        </nav>
                        <div class="tab-content pl-3 pt-2" id="nav-tabContent">
                            <div class="tab-pane fade show active" id="nav-home" role="tabpanel"
                                 aria-labelledby="nav-home-tab">
                                <div class="alert alert-info">
                                    <i class="fa fa-info"></i> <span id="info-message">Provide info to user about uploading media</span>
                                </div>
                                <span class="upload-error"></span>
                                <p>
                                    <br>
                                    <span id="item-media-filename-display"></span>&nbsp;&nbsp;
                                    <span>
                                        <a id="item-media-trash" title="Trash" href="#"><i class="fa fa-trash"></i></a>
                                    </span>
                                </p>

                                <input type="hidden" id="item-media" name="item_media">
                                <input type="hidden" id="item-type" name="item_type">

                                <form class="form-horizontal dropzone" id="item-dropzone" action="/uploads"
                                      method="post"
                                      enctype="multipart/form-data">
                                </form>

                                <p>
                                    <br>
                                    <span id="item-thumbnail-filename-display"></span>&nbsp;&nbsp;
                                    <span>
                                        <a id="item-thumbnail-trash" title="Trash" href="#"><i class="fa fa-trash"></i></a>
                                    </span>
                                </p>
                                <input type="hidden" id="item-thumbnail" name="item_thumbnail">

                                <form class="form-horizontal dropzone" id="item-thumbnail-dropzone" action="/uploads"
                                      method="post"
                                      enctype="multipart/form-data">
                                </form>
                                <br>
                            </div>
                            <div class="tab-pane fade" id="nav-profile" role="tabpanel"
                                 aria-labelledby="nav-profile-tab">
                                <div class="alert alert-info">
                                    <i class="fa fa-info"></i> <span id="info-message">Provide info to user about importing from repo</span>
                                </div>
                                <div class="col-12 col-md-12">
                                    <div class="row form-group">
                                        <input type="text" id="repo-uuid" name="repo_uuid"
                                               placeholder="DigitalDU record UUID" class="form-control">
                                        <!--
                                        <br><br><button class="btn btn-outline-secondary" type="button"><i class="fa fa-download"></i> Import</button></br>
                                        -->
                                    </div>
                                </div>
                                <br>
                            </div>
                        </div>
                    </div>
                    <hr>
                    <div class="is-standard-item">
                        <p>
                            <button class="btn btn-default">Item layout</button>
                        </p>
                        <div class="alert alert-info"><i class="fa fa-info"></i>
                            <span id="info-message">Provide info to user about item layouts</span>
                        </div>
                        <div class="row form-group">
                            <div class="col-12 col-md-12">
                                <form id="item-layout-form">
                                    <table class="table table-striped">
                                        <tr>
                                            <td style="width: 30%;padding: 5px">
                                                <img src="<%= host %>/images/item_layout_media_top_text_bottom.png" width="150" height="150">
                                            </td>
                                            <td style="60%;">
                                                <label class="btn btn-default" for="item-layout-top">Text media pair,
                                                    text below media</label>
                                            </td>
                                            <td style="width: 10%">
                                                <input class="item-layout-radio-btn" type="radio" name="layout"
                                                       id="item-layout-top" value="media_top"/>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td style="width: 30%;padding: 5px">
                                                <img src="<%= host %>/images/item_layout_text_top_media_bottom.png" width="150" height="150">
                                            </td>
                                            <td style="60%;">
                                                <label class="btn btn-default" for="item-layout-bottom">Text media
                                                    pair, text above the media</label>
                                            </td>
                                            <td style="width: 10%">
                                                <input class="item-layout-radio-btn" type="radio" name="layout"
                                                       id="item-layout-bottom" value="media_bottom"/>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td style="width: 30%;padding: 5px">
                                                <img src="<%= host %>/images/item_layout_media_only.png" height="75">
                                            </td>
                                            <td style="60%;">
                                                <label class="btn btn-default" for="item-layout-only">Media only, no
                                                    text</label>
                                            </td>
                                            <td style="width: 10%">
                                                <input class="item-layout-radio-btn" type="radio" name="layout"
                                                       id="item-layout-only" value="media_only"/>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td style="width: 30%;padding: 5px">
                                                <img src="<%= host %>/images/item_layout_text_only.png" height="75">
                                            </td>
                                            <td style="60%;">
                                                <label class="btn btn-default" for="item-layout-text-only">Text only, no
                                                    media</label>
                                            </td>
                                            <td style="width: 10%">
                                                <input class="item-layout-radio-btn" type="radio" name="layout"
                                                       id="item-layout-text-only" value="text_only"/>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td style="width: 30%;padding: 5px">
                                                <img src="<%= host %>/images/item_layout_text_left_media_right.png" height="75">
                                            </td>
                                            <td style="60%">
                                                <label class="btn btn-default" for="item-layout-right">Text media pair,
                                                    media on the right</label>
                                            </td>
                                            <td style="width: 10%">
                                                <input class="item-layout-left-right-radio-btn" type="radio"
                                                       name="layout" id="item-layout-right" value="media_right"/>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td style="width: 30%;padding: 5px">
                                                <img src="<%= host %>/images/item_layout_media_left_text_right.png" height="75">
                                            </td>
                                            <td style="60%;">
                                                <label class="btn btn-default" for="item-layout-left">Text media pair,
                                                    media on the left</label>
                                            </td>
                                            <td style="width: 10%">
                                                <input class="item-layout-left-right-radio-btn" type="radio"
                                                       name="layout" id="item-layout-half" value="media_left"/>
                                            </td>
                                        </tr>
                                    </table>
                                </form>
                                <form>
                                    <table id="item-media-width" class="table table-striped" style="display: none">
                                        <tr>
                                            <td style="width: 100%">
                                                <span class="form-text text-muted"
                                                      style="font-size: 17px">*
                                                    <small>Please select a media width</small></span>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td style="width: 30%;padding: 5px;">
                                                <img src="<%= host %>/images/item_layout_half.png">
                                            </td>
                                            <td style="60%">
                                                <label class="btn btn-default" for="item-layout-half">Image width is one
                                                    half of the exhibit item </label>
                                            </td>
                                            <td style="width: 10%">
                                                <input type="radio" name="layout" id="item-layout-half" value="half"/>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td style="width: 30%;padding: 5px;">
                                                <img src="<%= host %>/images/item_layout_third.png">
                                            </td>
                                            <td style="60%">
                                                <label class="btn btn-default" for="item-layout-third">Image width is
                                                    one third of the exhibit item </label>
                                            </td>
                                            <td style="width: 10%">
                                                <input type="radio" name="layout" id="item-layout-third" value="third"/>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td style="width: 30%;padding: 5px;">
                                                <img src="<%= host %>/images/item_layout_quarter.png">
                                            </td>
                                            <td style="60%">
                                                <label class="btn btn-default" for="item-layout-quarter">Image width is
                                                    one quarter of the exhibit item </label>
                                            </td>
                                            <td style="width: 10%">
                                                <input type="radio" name="layout" id="item-layout-quarter"
                                                       value="quarter"/>
                                            </td>
                                        </tr>
                                    </table>
                                </form>
                            </div>
                        </div>
                        <br>
                        <hr>
                    </div>
                    <p>
                        <button class="btn btn-default">Item styles</button>
                    </p>
                    <div class="alert alert-info">
                        <i class="fa fa-info"></i> <span
                                id="info-message">Provide info to user about applying styles</span>
                    </div>
                    <p>
                            <span class="form-text text-muted"
                                  style="font-size: 17px">Apply Custom Styles to Item</span>
                    </p>
                    <div class="row form-group">
                        <div class="col-12 col-md-12">
                            <div class="input-group">
                                <div class="input-group-btn">
                                    <input title="Color Picker" class="color-picker btn btn-default" type="color"
                                           id="item-background-color-picker" value="#ffffff">
                                </div>
                                <input type="text" id="item-background-color" name="item_background_color"
                                       placeholder="Item Background Color" class="form-control">

                            </div>
                        </div>
                    </div>
                    <div class="row form-group">
                        <div class="col-12 col-md-12">
                            <div class="input-group">
                                <div class="input-group-btn">
                                    <input title="Color Picker" class="color-picker btn btn-default" type="color"
                                           id="item-font-color-picker"
                                           value="#ffffff">
                                </div>
                                <input type="text" id="item-font-color" name="item_font_color"
                                       placeholder="Item Font Color" class="form-control">
                            </div>
                        </div>
                    </div>
                    <div class="row form-group">
                        <div class="col-12 col-md-12">
                            <div class="input-group">
                                <select name="item_font" id="item-font"
                                        class="form-control-lg form-control text-muted">
                                    <option value="">Item Font</option>
                                    <option value="Helvetica">Helvetica</option>
                                    <option value="Arial">Arial</option>
                                    <option value="Times New Roman">Times New Roman</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <br>
                    <hr>
                    <button class="btn btn-primary" type="button" id="save-item-btn">
                        <i class="fa fa-save"></i>&nbsp;&nbsp;Save
                    </button>
                    <!-- TODO: is this the same as "media_width"?
                    <div class="row form-group">
                        <div class="col-4 col-md-4">
                            <div class="input-group">
                                <input type="number" id="item-width" name="width"
                                       placeholder="Item Width" class="form-control">&nbsp;&nbsp;
                                <div class="input-group-btn">
                                    <i class="fa fa-percent"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                    -->
                </div><!-- end create item form -->
            </div>
            <div class="card-footer text-muted"><small>Item</small></div>
        </div>
    </div>
    <div class="clearfix"></div>
    <%- include('partials/footer.ejs'); %>
</div>
<script src="https://code.jquery.com/jquery-3.7.0.js"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.14.4/dist/umd/popper.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/js/bootstrap.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/jquery-match-height@0.7.2/dist/jquery.matchHeight.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/interactjs/dist/interact.min.js"></script>
<script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
<script src="https://unpkg.com/dropzone@5/dist/min/dropzone.min.js"></script>
<script src="<%= host %>/libs/axios-2.x/dist/axios.min.js"></script>
<script src="<%= host %>/libs/dompurify/purify.min.js"></script>
<script src="<%= host %>/app/http.module.js"></script>
<script src="<%= host %>/app/helper.module.js"></script>
<script src="<%= host %>/app/endpoints.module.js"></script>
<script src="<%= host %>/app/auth.module.js"></script>
<script src="<%= host %>/app/uploads.module.js"></script>
<script src="<%= host %>/app/exhibits.module.js"></script>
<script src="<%= host %>/app/items.module.js"></script>
<script src="<%= host %>/app/items.form.module.js"></script>
<script>
    itemsFormModule.init();
    itemsFormModule.set_items_form_nav_menu_links();
    uploadsModule.upload_item_media();
    uploadsModule.upload_item_thumbnail();
    itemsFormModule.check_grid();
    document.querySelector('#save-item-btn').addEventListener('click', itemsFormModule.create_item_record);
    document.querySelector('#item-media-trash').style.display = 'none';
    document.querySelector('#item-thumbnail-trash').style.display = 'none';
    document.querySelectorAll('.item-layout-left-right-radio-btn').forEach((radio_input) => {
        radio_input.addEventListener('click', () => {
            document.querySelector('#item-media-width').style.display = 'block';
        });
    });

    document.querySelectorAll('.item-layout-radio-btn').forEach((radio_input) => {
        radio_input.addEventListener('click', () => {
            document.querySelector('#item-media-width').style.display = 'none';
        });
    });

    document.querySelector('#item-background-color-picker').addEventListener('input', () => {
        if (document.querySelector('#item-background-color')) {
            document.querySelector('#item-background-color').value = document.querySelector('#item-background-color-picker').value;
        }
    });

    document.querySelector('#item-font-color-picker').addEventListener('input', () => {
        if (document.querySelector('#item-font-color')) {
            document.querySelector('#item-font-color').value = document.querySelector('#item-font-color-picker').value;
        }
    });

</script>
</body>
</html>
